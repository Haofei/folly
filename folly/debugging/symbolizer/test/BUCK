fbcode_target(
    _kind = custom_unittest,
    name = "gnu_debuglink_test",
    command = [
        "$(exe :gnu_debuglink_test.sh)",
        "$(location :crash)",
    ],
    type = "json",
    deps = [
        ":crash",
    ],
)

