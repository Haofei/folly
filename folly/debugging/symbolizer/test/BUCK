    _kind = cpp_binary,
    name = "dwarf_benchmark",
    srcs = ["DwarfBenchmark.cpp"],
    compiler_specific_flags = {
        "clang": [
            "-g",
        ],
    },
    target_compatible_with = ["fbcode//opensource/macros:broken-in-oss"],
    deps = [
        ":symbolizer_test_utils_dwarf4_dwarf32_noaaranges",
