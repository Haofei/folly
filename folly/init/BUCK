        "//folly/logging:init",
        "//folly/portability:config",
        "//folly/portability:gflags",
        "//folly/synchronization:hazptr_thread_pool_executor",
    ],
    exported_deps = [
        "//folly:portability",
    ],
    external_deps = [
        "glog",
    ],
)

fb_dirsync_cpp_library(
    name = "phase",
    srcs = ["Phase.cpp"],
    headers = ["Phase.h"],
    feature = triage_InfrastructureSupermoduleOptou,
    xplat_impl = folly_xplat_library,
