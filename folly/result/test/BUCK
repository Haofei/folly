    _kind = cpp_unittest,
    name = "try_test",
    srcs = ["try_test.cpp"],
    deps = [
        "//folly/portability:gtest",
        "//folly/result:try",
    ],
)

fbcode_target(
    _kind = cpp_benchmark,
    name = "result_coro_bench",
    srcs = ["result_coro_bench.cpp"],
    deps = [
        "//folly:benchmark",
        "//folly:portability",
        "//folly/lang:keep",
        "//folly/result:result",
    ],
)

